{
    "name": "qiq/qiq",
    "type": "library",
    "description": "Provides TemplateView and TwoStepView implementations using PHP itself as the templating language, and an optional lightweight template markup.",
    "keywords": [
        "escape",
        "escaper",
        "escaping",
        "template",
        "template view",
        "two step view",
        "two-step view",
        "twostep view",
        "view"
    ],
    "homepage": "https://github.com/qiqphp/qiq",
    "license": "MIT",
    "authors": [
        {
            "name": "Qiq Contributors",
            "homepage": "https://github.com/qiqphp/qiq/contributors"
        }
    ],
    "require": {
        "php": "^8.1",
        "laminas/laminas-escaper": "^2.0",
        "psr/container": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Qiq\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Qiq\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "cs-fix": "./vendor/bin/phpstan analyze -c phpstan.neon",
        "check": "composer test && composer cs-fix"
    }
}
